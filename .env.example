# =============================================================================
# Freelancer Finance Manager - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/freelancer_finance"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-change-in-production"
JWT_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
PORT=4000
FRONTEND_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# File Storage (local or s3)
# -----------------------------------------------------------------------------
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"

# For S3 storage:
# STORAGE_TYPE=s3
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=freelancer-finance-uploads

# -----------------------------------------------------------------------------
# OCR Provider (tesseract, google, or aws)
# -----------------------------------------------------------------------------
OCR_PROVIDER="tesseract"

# Google Vision:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# AWS Textract:
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# -----------------------------------------------------------------------------
# AI Categorization (OpenAI)
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-..."

# -----------------------------------------------------------------------------
# Email - Option 1: Resend (recommended, free tier: 100 emails/day)
# -----------------------------------------------------------------------------
RESEND_API_KEY=""

# -----------------------------------------------------------------------------
# Email - Option 2: SMTP
# -----------------------------------------------------------------------------
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="Freelancer Finance <noreply@yourdomain.com>"

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# 32-byte hex key for field-level encryption of sensitive data
ENCRYPTION_KEY="32-byte-hex-key-for-field-level-encryption"

# Secret key for initial admin account setup
ADMIN_SETUP_KEY="change-this-to-a-random-string"
