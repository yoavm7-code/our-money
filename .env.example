# Database
DATABASE_URL="postgresql://user:password@localhost:5432/our_money"

# JWT
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# File storage (local or S3)
STORAGE_TYPE="local"
# For S3:
# STORAGE_TYPE=s3
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=our-money-uploads

# OCR (one of: google, aws, tesseract)
OCR_PROVIDER="tesseract"
# Google Vision:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# AWS Textract:
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# AI categorization
OPENAI_API_KEY="sk-..."

# Optional: encryption key for sensitive DB fields
ENCRYPTION_KEY="32-byte-hex-key-for-field-level-encryption"
