# Database
DATABASE_URL="postgresql://user:password@localhost:5432/our_money"

# JWT
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"

# Server
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# File storage (local or S3)
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"
# For S3:
# STORAGE_TYPE=s3
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=our-money-uploads

# OCR (one of: google, aws, tesseract)
OCR_PROVIDER="tesseract"
# Tesseract languages: heb+eng for Hebrew+English (Israeli statements)
OCR_LANG="heb+eng"
# Google Vision:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# AWS Textract:
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# AI categorization (model for document extraction)
OPENAI_MODEL="gpt-4"
OPENAI_API_KEY=""

# reCAPTCHA v2 (optional; if not set, captcha is skipped for login/register)
# Get keys at https://www.google.com/recaptcha/admin
# RECAPTCHA_SECRET_KEY=your-secret-key

# Optional: encryption key for sensitive DB fields
ENCRYPTION_KEY=""
